{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Individual's PAYE employments",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "description": "A list of links for possible actions related to this endpoint.",
      "properties": {
        "self": {
          "type": "object",
          "description": "The Uniform Resource Identifier (URI) for this endpoint.",
          "properties": {
            "href": {
              "type": "string",
              "description": "The URL of the endpoint.",
              "example": "/individuals/employments/paye?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430&fromDate=2016-02-28&toDate=2017-03-01"
            }
          },
          "required": ["href"]
        }
      },
      "required": [
        "self"
      ]
    },
    "employments": {
      "type": "array",
      "description": "The list of the individualâ€™s PAYE employment data for the requested time period.",
      "items": {
        "type": "object",
        "properties": {
          "payFrequency": {
            "type": "string",
            "description": "How often the employee is paid.",
            "enum": [
              "WEEKLY",
              "FORTNIGHTLY",
              "FOUR_WEEKLY",
              "CALENDAR_MONTHLY",
              "QUARTERLY",
              "BI_ANNUALLY",
              "ANNUALLY",
              "ONE_OFF",
              "IRREGULAR"
            ]
          },
          "startDate": {
            "type": "string",
            "id": "full-date",
            "description": "The date the employment started.",
            "example": "2019-01-01"
          },
          "endDate": {
            "type": "string",
            "id": "full-date",
            "description": "The date the employment ended.",
            "example": "2019-03-01"
          },
          "employer": {
            "type": "object",
            "description": "The employer's details.",
            "properties": {
              "payeReference": {
                "type": "string",
                "description": "The employer's PAYE reference number. This is a unique identifier that a business gets when they register with HMRC as an employer.",
                "example": "247/A1987CB"
              },
              "name": {
                "type": "string",
                "description": "The employer's name.",
                "example": "ACME Industries Limited"
              },
              "address": {
                "type": "object",
                "description": "The address of the employer.",
                "properties": {
                  "line1": {
                    "type": "string",
                    "description": "Address line 1.",
                    "example": "Unit 23"
                  },
                  "line2": {
                    "type": "string",
                    "description": "Address line 2.",
                    "example": "Utilitarian Industrial Park"
                  },
                  "line3": {
                    "type": "string",
                    "description": "Address line 3.",
                    "example": "Utilitown"
                  },
                  "line4": {
                    "type": "string",
                    "description": "Address line 4.",
                    "example": "County Durham"
                  },
                  "line5": {
                    "type": "string",
                    "description": "Address line 5.",
                    "example": "UK"
                  },
                  "postcode": {
                    "type": "string",
                    "description": "The postcode for the address.",
                    "example": "DH4 4YY"
                  }
                }
              }
            }
          },
          "payments": {
            "description": "The employee's payment details. ",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "paymentDate": {
                  "description": "The date of the payment.",
                  "type": "string",
                  "id": "full-date",
                  "example": "2019-01-31"
                },
                "taxablePayment": {
                  "description": "The amount the employee was paid.",
                  "type": "number",
                  "example": "4765.32"
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["_links", "employments"]
}
